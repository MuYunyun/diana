{
  "exclude": [],
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist/",
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "removeComments": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
  },
  "include": [
    "test/",
    "src",
  ]
}