{
  "exclude": [],
  "compilerOptions": {
    "outDir": "./dist/",
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
  },
  "include": [
    "src/**/*"
  ]
}