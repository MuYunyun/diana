{
  "exclude": [],
  "compilerOptions": {
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "target": "es5",
    "lib": [
      "es6",
      "ES2016",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "module": "es6",
    "esModuleInterop": true,
    "baseUrl": ".",
    "noImplicitThis": false,
    "removeComments": false,
  },
  "include": [
    "test/",
    "src",
  ]
}